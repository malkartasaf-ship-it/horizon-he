{% doc %}
  @prompt
    add menu
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-menu-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-menu-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-menu-item-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-menu-link-{{ ai_gen_id }} {
    display: inline-block;
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    padding: {{ block.settings.link_padding_vertical }}px {{ block.settings.link_padding_horizontal }}px;
    transition: all 0.3s ease;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-menu-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.text_hover_color }};
    background-color: {{ block.settings.hover_background_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-menu-container-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_item_spacing }}px;
    }

    .ai-menu-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
  }
{% endstyle %}

<nav class="ai-menu-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <ul class="ai-menu-container-{{ ai_gen_id }}">
    {% if block.settings.menu != blank %}
      {% for link in block.settings.menu.links %}
        <li class="ai-menu-item-{{ ai_gen_id }}">
          <a href="{{ link.url }}" class="ai-menu-link-{{ ai_gen_id }}">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    {% else %}
      {% for i in (1..5) %}
        <li class="ai-menu-item-{{ ai_gen_id }}">
          <a href="#" class="ai-menu-link-{{ ai_gen_id }}">
            Menu item {{ i }}
          </a>
        </li>
      {% endfor %}
    {% endif %}
  </ul>
</nav>

