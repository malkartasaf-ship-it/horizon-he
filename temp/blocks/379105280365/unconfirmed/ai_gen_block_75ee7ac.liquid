{% doc %}
  @prompt
    Newsletter
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-newsletter-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-newsletter-subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.subtext_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.form_gap }}px;
    align-items: flex-start;
    {% if block.settings.form_layout == 'vertical' %}
      flex-direction: column;
    {% else %}
      flex-direction: row;
    {% endif %}
  }

  .ai-newsletter-input-wrapper-{{ ai_gen_id }} {
    flex-grow: 1;
    width: 100%;
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-newsletter-input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.input_focus_color }};
    outline-offset: 2px;
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    {% if block.settings.form_layout == 'vertical' %}
      width: 100%;
    {% else %}
      white-space: nowrap;
    {% endif %}
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: {{ block.settings.form_gap }}px;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-newsletter-button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-newsletter-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<newsletter-signup-{{ ai_gen_id }}
  class="ai-newsletter-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-newsletter-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subtext != blank %}
      <div class="ai-newsletter-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
    {% endif %}

    <div class="ai-newsletter-form-wrapper-{{ ai_gen_id }}">
      {%- form 'customer', class: 'ai-newsletter-form-' | append: ai_gen_id -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        
        <div class="ai-newsletter-input-wrapper-{{ ai_gen_id }}">
          <input
            type="email"
            name="contact[email]"
            class="ai-newsletter-input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
            {% endif %}
            placeholder="{{ block.settings.email_placeholder }}"
            required
          >
        </div>

        <button
          type="submit"
          class="ai-newsletter-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </button>

        {% if form.errors %}
          <div
            id="ai-newsletter-error-{{ ai_gen_id }}"
            class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-error-{{ ai_gen_id }}"
          >
            {{ form.errors.messages.email }}
          </div>
        {% endif %}

        {% if form.posted_successfully? %}
          <div
            id="ai-newsletter-success-{{ ai_gen_id }}"
            class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-success-{{ ai_gen_id }}"
          >
            {{ block.settings.success_message }}
          </div>
        {% endif %}
      {%- endform -%}
    </div>
  </div>
</newsletter-signup-{{ ai_gen_id }}>

<script>
  (function() {
    class NewsletterSignup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.form = this.querySelector('.ai-newsletter-form-{{ ai_gen_id }}');
        if (this.form) {
          this.form.addEventListener('submit', this.handleSubmit.bind(this));
        }
      }

      handleSubmit(event) {
        const emailInput = this.form.querySelector('input[type="email"]');
        if (emailInput && !emailInput.value.trim()) {
          event.preventDefault();
          emailInput.focus();
        }
      }
    }

    customElements.define('newsletter-signup-{{ ai_gen_id }}', NewsletterSignup{{ ai_gen_id }});
  })();
</script>

