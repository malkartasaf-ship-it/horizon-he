{% doc %}
  @prompt
    add Newsletter 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-newsletter-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-newsletter-subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.subtext_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.form_gap }}px;
    align-items: flex-start;
    justify-content: {{ block.settings.text_alignment }};
  }

  .ai-newsletter-input-wrapper-{{ ai_gen_id }} {
    flex: 1;
    max-width: {{ block.settings.input_max_width }}px;
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: 14px;
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-newsletter-input-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.input_hover_background }};
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    white-space: nowrap;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: 12px;
    font-size: 14px;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
    }

    .ai-newsletter-input-wrapper-{{ ai_gen_id }} {
      max-width: 100%;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-newsletter-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<newsletter-signup-{{ ai_gen_id }}
  class="ai-newsletter-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {%- form 'customer', class: 'ai-newsletter-form-wrapper-' | append: ai_gen_id -%}
    <input type="hidden" name="contact[tags]" value="newsletter">
    <div class="ai-newsletter-container-{{ ai_gen_id }}">
      {%- if block.settings.heading != blank -%}
        <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {%- endif -%}

      {%- if block.settings.subtext != blank -%}
        <div class="ai-newsletter-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
      {%- endif -%}

      <div class="ai-newsletter-form-{{ ai_gen_id }}">
        <div class="ai-newsletter-input-wrapper-{{ ai_gen_id }}">
          <input
            type="email"
            name="contact[email]"
            class="ai-newsletter-input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
            {% endif %}
            placeholder="{{ block.settings.email_placeholder }}"
            required
          >
        </div>
        <button
          type="submit"
          class="ai-newsletter-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </button>
      </div>

      {%- if form.errors -%}
        <div
          id="ai-newsletter-error-{{ ai_gen_id }}"
          class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-error-{{ ai_gen_id }}"
        >
          <span>{{ form.errors.messages.email }}</span>
        </div>
      {%- endif -%}

      {%- if form.posted_successfully? -%}
        <div
          id="ai-newsletter-success-{{ ai_gen_id }}"
          class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-success-{{ ai_gen_id }}"
        >
          <span>{{ block.settings.success_message }}</span>
        </div>
      {%- endif -%}
    </div>
  {%- endform -%}
</newsletter-signup-{{ ai_gen_id }}>

<script>
  (function() {
    class NewsletterSignup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.form = this.querySelector('form');
        if (this.form) {
          this.form.addEventListener('submit', this.handleSubmit.bind(this));
        }
      }

      handleSubmit(event) {
        const emailInput = this.form.querySelector('input[type="email"]');
        if (emailInput && !emailInput.value) {
          event.preventDefault();
        }
      }
    }

    customElements.define('newsletter-signup-{{ ai_gen_id }}', NewsletterSignup{{ ai_gen_id }});
  })();
</script>

